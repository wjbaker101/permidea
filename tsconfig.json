{
    "compilerOptions": {
        "module": "CommonJS",
        "noImplicitAny": true,
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/backend/*",
        "src/frontend/ts/*",
        "src/common/*"
    ],
    "exclude": [
        "node_modules",
        "src/static/*"
    ]
}
